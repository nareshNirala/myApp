html
  head
    title Register with perfect learn
    meta(name='description', content='Home page')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous")
    link(rel='stylesheet', href='../../public/stylesheets/style.css')
  body#registerForm
    h1.center.logo Perfect Learn
    h2.center Registration Form
    hr
    p.center.text-warning #{message} 
    hr
    div.container
      form(action='/register', method='post')
        div.from-group
          label Full Name:
          input(type="text", name='name' placeholder='Enter your full name', required).form-control
        div.form-group
          label Email Id:
          input(type='email', name='username' placeholder='Enter email address', required).form-control
          small This is your username for login.
        div.form-group 
          label Mobile No: 
          input(type="number" name="mobile_number" placeholder='Enter mobile number').form-control
        div.form-group
          label Password:
          input(type='password', name='password' placeholder='Enter password', required).form-control
          small Password should be minimum 6 digit.
        div.form-group
          label Conform Password:
          input(type='password', name='conform_password' placeholder='Enter conform password' required).form-control


        div
          input(type='submit', value='Register').btn.btn-primary
      hr
      div
        p Have an account?
        a(href="/login").btn.btn-primary Log In
  
  

   

